    "version": "0.2.0",
    "configurations": [
        {
			"name": "Haxe Interpreter",
			"type": "haxe-eval",
			"request": "launch"
        },
        {
            "name": "Run Tests",
            "preLaunchTask": "haxe: test.hxml",
            "program": "${workspaceFolder}/bin/tests.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std",
            "type": "node"
        }
    ]
}
