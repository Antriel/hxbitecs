{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Tests",
			"type": "hxml",
			"file": "test.hxml",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Run Tests",
			"dependsOn": [
				"Build Tests"
			],
			"type": "shell",
			"command": "node",
			"args": [
				"bin/tests.js"
			],
			"problemMatcher": []
		}
	]
}
